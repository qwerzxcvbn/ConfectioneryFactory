<Window x:Class="ConfectioneryFactory.LogisticsCalcul"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfectioneryFactory"
        mc:Ignorable="d"
        Title="LogisticsCalcul" Height="350" Width="500">
    <Grid>
        <StackPanel>
            <TextBlock Text="Подсчет логистики" FontSize="30" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Text="Расстояние до магазина (км)"></TextBlock>
            <TextBox Name="distance" Margin="0 0 0 20"></TextBox>
            <TextBlock Text="Стоимость за километр"></TextBlock>
            <TextBox Name="pricekm" Margin="0 0 0 40"></TextBox>

            <TextBlock Text="Результат"></TextBlock>
            <TextBox Name="result" Margin="0 0 0 20"></TextBox>
            <Button Content="Расчитать" Click="Button_Click" ></Button>
            
        </StackPanel>
    </Grid>
</Window>
