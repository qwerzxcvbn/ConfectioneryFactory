<Window x:Class="ConfectioneryFactory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfectioneryFactory"
        mc:Ignorable="d"
        Title="Вход" Height="450" Width="600">
    <Grid>
        <StackPanel>
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="40" Margin="0 30 0 0"></TextBlock>
            <TextBlock Text="Логин" FontSize="20" HorizontalAlignment="Center" Margin="-340 30 0 0"></TextBlock>
            <TextBox Height="25" Width="400" HorizontalAlignment="Center" Name="LoginB"></TextBox>
            <TextBlock Text="Пароль" FontSize="20" HorizontalAlignment="Center" Margin="-320 30 0 0"></TextBlock>
            <PasswordBox Height="25" Width="400" HorizontalAlignment="Center" Name="PassB"></PasswordBox>
            <Button Content="Войти" FontSize="20" HorizontalAlignment="Center" Height="30" Width="400" Margin="0 40 0 0" Name="Vxod" Click="Vxod_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
